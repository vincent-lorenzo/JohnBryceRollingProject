pipeline {
    agent any
    
    environment {
        // Create this as a 'Username with Password' credential in Jenkins
        DOCKERHUB = credentials('dockerhub')
        IMAGE_NAME = 'vincentlorenzo/flask-aws-monitor'
        IMAGE_TAG = "latest"
    }
    
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/vincent-lorenzo/JohnBryceRollingProject.git'
            }
        }
        
        stage('Parallel Checks') {
            parallel {
                stage('Linting') {
                    steps {
                        echo 'Running linting...'
                        sh 'pip install flake8'
                        // Scans the 'python' folder as per your layout
                        sh 'flake8 python || true'
                    }
                }

                stage('Security Scan') {
                    steps {
                        echo 'Running security scan...'
                        sh 'pip install bandit'
                        // Scans the 'python' folder as per your layout
                        sh 'bandit -r python || true'
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                // This targets the Dockerfile inside the 'Docker' folder
                sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f Docker/Dockerfile ."
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                echo 'Pushing image to Docker Hub...'
                // USR and PSW are generated by the DOCKERHUB variable above
                sh "echo ${DOCKERHUB_PSW} | docker login -u ${DOCKERHUB_USR} --password-stdin"
                sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed! Check logs for details.'
        }
    }
}
