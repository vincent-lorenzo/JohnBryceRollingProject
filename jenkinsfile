pipeline {
    agent any

    environment {
        DOCKERHUB_CRED_ID = 'dockerhub'
        IMAGE_NAME = 'vincentlorenzo/flask-aws-monitor'
    }

    stages {
        stage('Clone Repository') {
            steps {
                checkout scm
            }
        }

        stage('Parallel Checks') {
            parallel {
                stage('Linting') {
                    steps {
                        echo "Running linting..."
                        sh "pip install flake8 --break-system-packages && flake8 python/app.py || true"
                    }
                }
                stage('Security Scan') {
                    steps {
                        echo "Running security scan..."
                        sh "pip install bandit --break-system-packages && bandit -r python/app.py || true"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh "docker build -t ${IMAGE_NAME}:latest -f Docker/Dockerfile ."
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CRED_ID}", passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                    sh "echo ${DOCKER_PASS} | docker login -u ${DOCKER_USER} --password-stdin"
                    sh "docker push ${IMAGE_NAME}:latest"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}